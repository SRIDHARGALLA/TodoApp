<%-include('header') -%>
    <div class="container">
        <h1>
            TODO</h1>
        <form action="/todo/<%=todo._id%>?_method=PUT" method="POST">
            <div class="input-group mb-3">
                <input type="text" name="todo" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" id="todo" value="<%=todo.todo%>">
            </div>
            <% if(todo.status=="checked"){ %>

                <div class="form-check">
                    <label class="form-check-label" for="flexCheckDefault"> Mark As Incompleted</label>
                    <input class="form-check-input" type="checkbox" value="unchecked" name="status" id="flexCheckDefault">

                </div>

                <% } else{ %>


                    <div class="form-check">
                        <label class="form-check-label" for="flexCheckDefault">Mark As Completed</label>
                        <input class="form-check-input" type="checkbox" value="checked" name="status" id="flexCheckDefault">
                    </div>

                    <% } %>
                        <button type="submit" class="btn btn-dark">Update</button>
                        <a href="/todo" class="btn btn-danger ">Cancel</a>
        </form>
    </div>
    <%-include('footer') -%>